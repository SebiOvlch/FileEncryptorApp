<Window x:Class="FileEncryptor.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileEncryptor.UI"
        mc:Ignorable="d"
        Title="File Encryptor" Height="500" Width="800"
        MaxHeight="600" MaxWidth="900"
        WindowStartupLocation="CenterScreen"
        
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        Foreground="#CCCCCC">

    <Border Background="#2D2D30"
            CornerRadius="15"
            BorderBrush="#3E3E42"
            BorderThickness="1"
            Margin="10"
            MouseDown="Border_MouseDown">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15"
                              ShadowDepth="2"
                              Direction="270"
                              Color="Black"
                              Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="0,0,0,0">
                <TextBlock Text="🔒Secure File Encryptor" 
                           Foreground="#CCCCCC" 
                           VerticalAlignment="Center" 
                           Margin="5,0,0,0"
                           FontWeight="Bold"
                           FontSize="20"
                           FontFamily="Segoe UI Semibold"/>
                <Button x:Name="btn_Close" Content="✕" 
                        HorizontalAlignment="Right" 
                        Width="40" 
                        Height="30"
                        Margin="0,0,5,0"
                        Background="Transparent"
                        Foreground="Red"
                        FontSize="20"
                        BorderThickness="0"
                        Click="Button_Close_Click"
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>

            <Grid Margin="20,20,20,20" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="Choose a file:" FontWeight="Bold"/>
                    <Grid Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="txtFilePath" IsReadOnly="True" Padding="5"/>
                        <Button Content="..." Width="40" Margin="5,0,0,0" Grid.Column="1" Click="BtnBrowse_Click"/>
                    </Grid>
                </StackPanel>

                <GroupBox Header="Cryptography settings" Grid.Row="1" Margin="0,0,0,20">
                    <UniformGrid Columns="3" Margin="10">
                        <StackPanel Margin="5">
                            <TextBlock Text="Algorithm:"/>
                            <ComboBox x:Name="cbAlgorithm" SelectedIndex="0"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Cipher Mode:"/>
                            <ComboBox x:Name="cbCipherMode" SelectedIndex="0"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Padding Mode:"/>
                            <ComboBox x:Name="cbPaddingMode" SelectedIndex="0"/>
                        </StackPanel>
                    </UniformGrid>
                </GroupBox>

                <StackPanel Grid.Row="2" Margin="0,0,0,20">
                    <TextBlock Text="Password:" FontWeight="Bold"/>
                    <TextBox x:Name="txtPassword" Margin="0,5,0,0" Padding="5"/>
                </StackPanel>

                <StackPanel Grid.Row="3" VerticalAlignment="Bottom">
                    <TextBlock x:Name="lblStatus" Text="Waiting..." HorizontalAlignment="Center" Margin="0,0,0,5"/>

                    <ProgressBar x:Name="progressBar" Height="20" Minimum="0" Maximum="100"/>

                    <Grid Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="btnEncrypt" Content="🔒 Encrypt" Height="35" Click="BtnEncrypt_Click"/>
                        <Button x:Name="btnDecrypt" Content="🔓 Decrypt" Grid.Column="2" Height="35" Click="BtnDecrypt_Click"/>
                        <Button x:Name="btnCancel" Content="Cancel" Grid.Column="4" Width="80" IsEnabled="False" Click="BtnCancel_Click" Cursor=""/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
