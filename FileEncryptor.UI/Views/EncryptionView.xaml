<UserControl x:Class="FileEncryptor.UI.EncryptionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FileEncryptor.UI"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800"
             Background="Transparent">
    <Grid>
        <Grid Margin="20,20,20,20" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Choose a file:" FontWeight="Bold"/>
                <Grid Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="txtFilePath" Style="{StaticResource ModernTextBox}" Tag="Choose or drop a file..." 
                     MouseDoubleClick="txtFilePath_DoubleClick" IsReadOnly="True" Padding="5"
                     AllowDrop="True"
                     PreviewDragOver="txtFilePath_PreviewDragOver"
                     PreviewDrop="txtFilePath_PreviewDrop"
                     DragLeave="txtFilePath_DragLeave"/>
                    <Button x:Name="btnBrowse" Style="{StaticResource PrimaryButton}" 
                    Content="Browse..." Foreground="LightGray"
                    Width="75" Margin="5,0,5,0" Grid.Column="1" Click="BtnBrowse_Click"/>
                </Grid>
            </StackPanel>

            <GroupBox Header="Cryptography settings" Grid.Row="1" Margin="0,0,0,20" BorderThickness="0">
                <UniformGrid Columns="3" Margin="10">
                    <StackPanel Margin="5">
                        <TextBlock Text="Algorithm:" Foreground="Gray" FontSize="11"/>
                        <ComboBox x:Name="cbAlgorithm" Style="{StaticResource ModernComboBox}" Height="30" SelectedIndex="0" Margin="0, 8, 0, 0"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <TextBlock Text="Cipher Mode:" Foreground="Gray" FontSize="11"/>
                        <ComboBox x:Name="cbCipherMode" Style="{StaticResource ModernComboBox}" Height="30" SelectedIndex="0" Margin="0, 8, 0, 0"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <TextBlock Text="Padding Mode:" Foreground="Gray" FontSize="11"/>
                        <ComboBox x:Name="cbPaddingMode" Style="{StaticResource ModernComboBox}" Height="30" SelectedIndex="0" Margin="0, 8, 0, 0"/>
                    </StackPanel>
                </UniformGrid>
            </GroupBox>

            <GroupBox Header="Hash Settings" Grid.Row="2" Margin="0,0,0,20" BorderThickness="0">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                        <TextBlock Text="Algorithm:" Margin="0,0,0,5" Foreground="Gray"/>
                        <ComboBox x:Name="cbHashAlgo" 
                    Style="{StaticResource ModernComboBox}" 
                    Height="30" 
                    SelectedIndex="0" 
                    HorizontalAlignment="Stretch"/>
                    </StackPanel>

                    <Button x:Name="btnSolveHashing" 
                Grid.Row="0" Grid.Column="1"
                Content="Get Hash" 
                Height="30" Width="120" 
                Style="{StaticResource PrimaryButton}" 
                Margin="0,0,0,10"
                VerticalAlignment="Bottom"
                Click="btnSolveHashing_Click"/>

                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                        <TextBlock Text="Hash Result:" Margin="0,0,0,5" Foreground="Gray" FontSize="11"/>

                        <TextBox x:Name="txtHashResult" 
                     Style="{StaticResource ModernTextBox}" 
                     Tag="Result..." 
                     Padding="6"
                     IsReadOnly="True"
                     HorizontalAlignment="Stretch"/>
                    </StackPanel>

                </Grid>
            </GroupBox>

            <StackPanel Grid.Row="3" Margin="0,0,0,20">
                <TextBlock Text="Password:" FontWeight="Bold"/>
                <TextBox Style="{StaticResource ModernTextBox}" Tag="Password..." 
                 FontSize="12" Width="250" HorizontalAlignment="Left"
                 x:Name="txtPassword" Margin="0,5,0,0" Padding="5"/>
            </StackPanel>

            <StackPanel Grid.Row="4" VerticalAlignment="Bottom">
                <TextBlock x:Name="lblStatus" Text="Waiting..." HorizontalAlignment="Center" Margin="0,0,0,5"/>

                <ProgressBar x:Name="progressBar" Style="{StaticResource ModernProgressBar}" Height="20" Minimum="0" Maximum="100"/>

                <Grid Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnEncrypt" Style="{StaticResource PrimaryButton}" Content="🔒 Encrypt" Height="35" Click="BtnEncrypt_Click"/>
                    <Button x:Name="btnDecrypt" Style="{StaticResource PrimaryButton}" Content="🔓 Decrypt" Grid.Column="2" Height="35" Click="BtnDecrypt_Click"/>
                    <Button x:Name="btnCancel" Style="{StaticResource DestructiveButton}" Content="Cancel" Grid.Column="4" Height="35" Width="80" IsEnabled="False" Click="BtnCancel_Click" Cursor="Hand"/>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
